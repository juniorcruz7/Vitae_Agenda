#include <iostream>
#include <string>
#include <vector>

using namespace std;

class Agenda {
public:

    //Definindo onde será armazenado a disponibilidade por dia e mes (6 horários disponiveis)
    vector<string> agenda[12][30];

    //Registrando os horários disponiveis por dia
    vector<string> disponibilidade = {"Disponivel", "Disponivel", "Disponivel", "Disponivel", "Disponivel", "Disponivel"};

    //Definindo os horários (fixos)
    vector<string> horas = {"12:00 as 13:00", "13:00 as 14:00", "14:00 as 15:00", "15:00 as 16:00", "16:00 as 17:00", "17:00 as 18:00"};

    //Definindo tudo como disponivel/Chamar pra usar horarios
    void atribuicao_padrao() {

        for (int m = 0; m < 12; m++) {
            for (int d = 0; d < 30; d++) {
                agenda[m][d] = {"Disponivel", "Disponivel", "Disponivel", "Disponivel", "Disponivel", "Disponivel"};
            }
        }
    }

    //1 ou 2 pra marcar
    void horarios(int i_m, int i_d) {

        //Definindo as váriaveis que serão fornecidas pelo usuário
        int indice_mes = i_m - 1;
        int indice_dia = i_d - 1;

        //Por motivos práticos, definirei todos os horários como disponiveis (deve ser implementado com o fstream os indisponiveis)
        for (int c = 0; c < 6; c++) {
            agenda[indice_mes][indice_dia][c] = disponibilidade[c];
        }

        cout << "Horarios disponiveis:\n";
        for (int i = 0; i < 6; i++) {
            cout << horas[i] << ": " << agenda[indice_mes][indice_dia][i] << "\n";
        }
        cout << "\n"; //Linha vazia pra organização

        int alterar;
        string disponivel;

        cout << "Digite o numero referente ao horario que voce quer alterar:\n";
        cout << "[1] 12:00 as 13:00:\n";
        cout << "[2] 13:00 as 14:00:\n";
        cout << "[3] 14:00 as 15:00:\n";
        cout << "[4] 15:00 as 16:00:\n";
        cout << "[5] 16:00 as 17:00:\n";
        cout << "[6] 17:00 as 18:00:\n";
        cin >> alterar;

        alterar = alterar - 1;
        int marcar;

        cout << "Digite o numero referente a disponibilidade que voce quer deixar:\n";
        cout << "[1] Deixar disponivel\n";
        cout << "[2] Deixar indisponivel\n";
        cin >> marcar;

        if (marcar == 1) {
            disponivel = "Disponivel";
        }
        else {
            disponivel = "Indisponivel";
        }

        agenda[indice_mes][indice_dia][alterar] = disponivel;
        for (int i = 0; i < 6; i++) {
            cout << horas[i] << ": " << agenda[indice_mes][indice_dia][i] << "\n";
        }
    }
};

//Aqui deve pedir o mês, o dia
int main() {

    int mes,dia;

    cout << "Digite o mes que voce quer ver (1 a 12):\n";
    cin >> mes;
    cout << "Digite o dia que voce quer ver (1 a 30):\n";
    cin >> dia;

    Agenda quinze;
    quinze.atribuicao_padrao();
    quinze.horarios(mes, dia);

    return 0;
}
